- flash.each do |key, value|
    .alert{ :class => "alert-#{key}" }
    %button.close{ :data => { :dismiss => "alert" } } x
    %strong
        = value

.form
    =form_for RentalProperty.new do |f|
        =f.label :title
        =f.text_field :title

        =f.label :description
        =f.text_field :description

        =f.label :address
        =f.text_field :address

        =f.label "Price"
        =f.number_field :price

        =f.label "Image"
        =f.file_field :image

        =f.submit



.row
    .col-md-offset-1
    .col-md-2.button-navigate= link_to('Back to rental properties list', rental_properties_path)
