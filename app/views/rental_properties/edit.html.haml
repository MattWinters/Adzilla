- flash.each do |key, value|
    .alert{ :class => "alert-#{key}" }
    %button.close{ :data => { :dismiss => "alert" } } x
    %strong
        = value
#main.container
    .form
        =form_for @property, :method => :patch do |f|
            =f.label :title
            =f.text_field :title

            =f.label :description
            =f.text_field :description

            =f.label :address
            =f.text_field :address

            =f.label "Asking price"
            =f.number_field :price

            =f.label "Image"
            =f.file_field :images

            =f.submit

.row
    .middle
        .button-navigate= link_to('cancel changes', rental_property_path(@property))
